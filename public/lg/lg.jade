mixin yearguide(year)
  - var xname = '_' + year
  .thumbnail 
    img(data-src="holder.js/300x200", alt="...")
    .caption.text-center 
      h2 #{ year }
      != partial(xname)
      a(class="btn btn-info btn-lg", href="/#{ year }") #{ year }

mixin yearRow(years)
  
    - each year in years
      .col-sm-6.col-md-3
        .thumbnail
          a(href="/lg/#{ year }_detail")
            img.img-responsive(data-src="holder.js/300x200", alt="...")
          //.caption.text-center      
          h2 
            a(href="/lg/ydetail/#{ year }_detail") #{ year }
          - var xname = '_' + year
          != partial(xname)
